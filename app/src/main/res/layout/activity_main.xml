<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.quan.okhttp.MainActivity">


    <EditText
        android:id="@+id/et_ssid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="ssidNum"
         />

    <Button
        android:id="@+id/bt_ssid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        app:layout_constraintLeft_toRightOf="@id/et_ssid"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="ssid Password "
        app:layout_constraintTop_toBottomOf="@id/et_ssid" />

    <EditText
        android:id="@+id/et_interval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="FTP Download Internavl "
        app:layout_constraintTop_toBottomOf="@id/et_password"/>

    <Button
        android:id="@+id/bt_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        app:layout_constraintTop_toBottomOf="@id/bt_ssid"
        app:layout_constraintLeft_toRightOf="@id/et_password"/>



    <Button
        android:id="@+id/bt_interval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        app:layout_constraintTop_toBottomOf="@id/bt_password"
        app:layout_constraintLeft_toRightOf="@id/et_interval"/>

    <EditText
        android:id="@+id/et_ftpAddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="FTP addr"
        app:layout_constraintTop_toBottomOf="@id/et_interval"/>

    <Button
        android:id="@+id/bt_ftpAddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        app:layout_constraintTop_toBottomOf="@id/bt_interval"
        app:layout_constraintLeft_toRightOf="@id/et_ftpAddr"/>

    <TextView
        android:id="@+id/tx_ssid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="conf_ssid"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/et_ftpAddr"/>

    <TextView
        android:id="@+id/tx_interval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="conf_interval"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tx_ssid" />

    <TextView
        android:id="@+id/tx_myservice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="service result"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tx_interval" />

    <TextView
        android:id="@+id/tx_wifistate"
        android:layout_width="67dp"
        android:layout_height="23dp"
        android:text="wifi state: "
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tx_myservice" />

    <TextView
        android:id="@+id/tx_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tx_myservice"
        app:layout_constraintLeft_toRightOf="@id/tx_wifistate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tx_wifistate" />

</android.support.constraint.ConstraintLayout>
